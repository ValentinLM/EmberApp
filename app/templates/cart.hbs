<main class="container mt-5">
    <h1>Shopping Cart</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">Home</LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping Cart</li>
    </ol>

    {{#each this.cart.itemList as |item|}}
        <div class="cart-item  d-flex aling-item-center">
            <div class="cart-item-thumbnail">
                <img src={{item.image}} alt="">
            </div>
            <div class="ml-3">
                <h4>{{item.name}}</h4>
                <i class="font-weight-bold">{{currency item.price}}</i>
            </div>
            <input type="number" class="ml-auto" value={{item.count}} min="1" {{on "input" (fn this.updateItemCount item)}}>
            <button style="color:red">
                Delete
                <i>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                </i>
            </button>
        </div>
    {{/each}}

    <section class="w-50 ml-auto text-right mb-5">
        <div class="row">
            <span class="col">SubTotal</span>
            <span class="col">{{ currency this.subtotal }}</span>
        </div>
        <div class="row">
            <span class="col">Tax</span>
            <span class="col">{{ currency this.tax }}</span>
        </div>
        <div class="row">
            <span class="col">Total</span>
            <span class="col">{{ currency this.total }}</span>
        </div>
    </section>

    <button type="button" class="btn btn-success float-right">Pagar</button>
</main>