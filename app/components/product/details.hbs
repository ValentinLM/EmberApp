<div class="product-details">
    {{!-- Header --}}
    <section>
        <h3>New Era</h3>
        <div class="text-warning">
            <i class="a-icon a-icon a-star-4-5"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-half-o"></i>
        </div>
    </section>

        {{!-- Price ----}}
    <section>
        <del class="small text-black-50">$199.95</del>
        <i class="text-danger font-weight-bold">$99.99</i>
    </section>

    <div>
        <h5>Color</h5>
        <div class="product-colors active-{{@color}}">
            <span class="product-color color-red" {{on "click" (fn @onChangeColor "red")}}></span>
            <span class="product-color color-black" {{on "click" (fn @onChangeColor "black")}}></span>
        </div>
    </div>
</div>